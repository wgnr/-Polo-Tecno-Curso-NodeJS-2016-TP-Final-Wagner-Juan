extends layout

block content
  h1= title
  form(action='',method='post')
    div
      label(for='fname') First Name:
      input(type='text', name='fname', id='fname', placeholder='Employee-s first name')
    div
      label(for='lname') Last Name:
      input(type='text', name='lname', id='lname', placeholder='Employee-s last name!')
    div
      label(for='email') E-Mail:
      input(type='text', name='email', id='email', placeholder='email goes here...')
    div
      label(for='password') Password:
      input(type='text', name='password', id='password', placeholder='Passss...')
    div
      label(for='rpassword') Re enter password:
      input(type='text', name='rpassword', id='rpassword', placeholder='retype your password!')
    div
      input(type='submit', value='Add!')
  style.
    form label { min-width: 80px; display: inline-block; }
    form > div { padding: 5px; }