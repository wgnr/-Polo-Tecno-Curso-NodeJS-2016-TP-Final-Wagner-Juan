extends layout

block content
  h1= title
  p=JSON.stringify(persons)
  p=JSON.stringify(flashmsg)
  p
    a(href="/panel/employees/new") New Employee
  table
    tr
      th id
      th First Name
      th Last Name
      th E-mail
      th Options
    - persons.forEach(function(v,i){
    tr
      td=i
      td=v.firstName
      td=v.lastName
      td=v.email      
      td
        a(href="/panel/employees/edit/"+v._id) Edit
        a(href="/panel/employees/delete/"+v._id) Delete
    - });